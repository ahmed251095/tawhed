<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <template id="invoices" inherit_id="account.report_invoice_document">
           <xpath expr="//t[@t-call='web.external_layout']//div[1]" position="attributes">
               <attribute name="t-if">1==2</attribute>
           </xpath>
           <xpath expr="//div[@name='payment_term']" position="attributes">
               <attribute name="t-if">1==2</attribute>
           </xpath>
           <xpath expr="//t[@t-if='o.invoice_payment_term_id.display_on_invoice and payment_term_details']" position="attributes">
               <attribute name="t-if">o.invoice_payment_term_id.display_on_invoice and payment_term_details and 1==2</attribute>
           </xpath>
           <xpath expr="//div[@class='page']" position="inside">
                <div class="row" dir="ltr">
                    <div class="col-6"></div>

                    <div class="col-3"><span >Customer Debit:</span></div>
                    <t t-set="due" t-value="o.partner_id.debit-o.amount_total"/>
                    <div class="col-3"><span t-esc="due if due >=0 else 0"/> </div>
                </div>
           </xpath>

           <xpath expr="//div[@class='page']//h2" position="after">
               <div class="row" >
                   <div class="col-2"><strong>Customer:</strong></div>
                   <div class="col-9 text-left"><strong><span t-field="o.partner_id"/></strong></div>
               </div>
               <div class="row">
                   <div class="col-2"><strong>Address:</strong></div>
                   <div class="col-9 text-left"><strong><span t-field="o.address"/></strong></div>
               </div>
           </xpath>
       </template>
