<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fs_invoices" model="ir.actions.report">
        <field name="name">Simple Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sr_bops_reports.fs_report_invoice</field>
        <field name="report_file">sr_bops_reports.fs_report_invoice</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="paperformat_id" ref="sr_bops_reports.simple_invoice_paperformat"/>
        <!-- <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field> -->
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),(4, ref('account.group_account_readonly'))]"/>
    </record>

    <template id="fs_header_external_layout">
        <div class="header">
            <div class="row">
                <div class="col-2">
                </div>
                <div class="col-10" style="margin-left: 10px;">
                    <h4><strong style="font-size: 20px!important;"><t t-esc="company.name"/></strong></h4>
                    <t t-if="company.street">
                        <t style="font-size: 15px!important;" t-esc="company.street"/>, 
                    </t>
                    <t t-if="company.street2">
                        <t style="font-size: 15px!important;" t-esc="company.street2"/>, 
                    </t>
                    <t t-if="company.city">
                        <t t-if="company.zip">
                            <t style="font-size: 15px!important;" t-esc="company.city"/> - <t t-esc="company.zip"/>, 
                        </t>
                        <t t-else="">
                            <t style="font-size: 15px!important;" t-esc="company.city"/>, 
                        </t>
                    </t>
                    <t t-if="not company.city and company.zip">
                        <t style="font-size: 15px!important;" t-esc="company.zip"/>, 
                    </t>
                    <t t-if="company.state_id">
                        <t t-esc="company.state_id.name"/>, 
                    </t>
                    <t t-if="company.country_id">
                        <br/>
                        <t style="font-size: 15px!important;" t-esc="company.country_id.name"/> 
                        <span style="margin-left: 10px;font-size: 15px!important;"> Trn: <t t-esc="company.trn_number"/></span>
                    </t>
                    <div class="row">
                        <div class="col-4">
                            <div class="row">
                                <div class="col-3">
                                </div>
                                <div class="col-9">
                                </div>
                            </div>
                        </div>
                        <!-- <div class="col-4">
                            <div class="row">
                                <div class="col-3">
                                    <span>Tel:</span>
                                </div>
                                <div class="col-9">
                                    <span><t t-esc="company.phone"/></span>
                                </div>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
            <t t-if="o and o._name == 'account.move'">
                <h2
                    style="font-size: 26px; font-weight: bold; text-align: center; margin-top: 100px; color:black !important;">
                    <span t-if="o.company_id.country_id.code == 'AE' and o.move_type in ['out_invoice', 'out_refund']">TAX</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Tax Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Tax Vendor Bill</span>
                    <!--<span t-if="o.name != '/'" t-field="o.name"/> -->
                </h2>

                <table class="table table-sm o_main_table mt32 mb32"
                    name="main_info_table" style="border: none;table-layout: fixed ;">
                    <t t-set="sale_id" t-value="o.env['sale.order'].sudo().search([('invoice_ids', '=', o.ids)], limit=1)"/>
                    <tbody style="border: none;" >
                        <tr style="border: none; font-size: 14px;">
                            <t t-set="colspan" t-value="2" />
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <!--<span><strong>Account number</strong>: <span t-field="o.partner_id.ref"/></span><br/> -->
                                <span>
<!--                                    <strong>Customer Name:</strong> -->
                                    <strong><span t-field="o.partner_id" /></strong>
                                </span>
                                <br />
                                <span>
<!--                                    <strong>Customer Address:</strong> -->
                                    <address t-field="o.partner_id"
                                        t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True}" />
                                </span>
                                <br/>
                                <span>
                                    <strong>TRN:</strong>
                                    <span t-field="o.partner_id.vat" />
                                </span>
                                <br/>
                                <span>
                                    <strong>Contact:</strong>
                                    <span t-field="sale_id.contact" />
                                </span>
                                <br/>
                            </td>
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <strong style="font-size:16px;">Subject:</strong>
                                <span style="font-size: 12px;"><t t-esc="sale_id.crm_lead_id.project_id.name" /></span>
                                <br />
                                <strong style="font-size:16px;">Project:</strong>
                                <span style="font-size: 12px;"><t t-esc="sale_id.opportunity_project_id.job_number" /></span>
                                <br />
                            </td>
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <span>
                                    <strong>Invoice Date:</strong>
                                    <span t-field="o.invoice_date" />
                                </span>
                                <br />
                                <span>
                                    <strong>Invoice Number:</strong>
                                    <span t-field="o.name" />
                                </span>
                                <br />
                                <span>
                                    <strong>Quote Number:</strong>
                                    <span t-field="sale_id.name" />
                                </span>
                                <br/>
                                <span>
                                    <strong>LPO:</strong>
                                    <span t-field="o.lpo" />
                                </span>
                                <br />
                                <!--<span><strong>Mobile</strong>: <span t-field="o.partner_id.mobile"/></span><br/> -->
                                <span>
                                    <strong>Payment Term:</strong>
                                    <span t-field="o.invoice_payment_term_id.name" />
                                </span>
                                <br />
                                <span>
                                    <strong>Due Date:</strong>
                                    <span t-field="o.invoice_date_due" />
                                </span>
                                <br />
                                <strong style="font-size:14px;">Sales Person:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.user_id.name" />
                                <br />
                                <!-- <strong style="font-size:14px;">Batch Number:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.batch_number.name" />
                                <br /> -->
                                <strong style="font-size:14px;">Sales Coordinator:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.sales_cordinator_id.name" />
                                <br />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
    </template>

    <template id="fs_invoice_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="sr_bops_reports.fs_header_external_layout"/>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}"
             t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div>
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-out="0"/>
        </div>
    </template>

    <template id="fs_report_invoice_document">
        <t t-call="sr_bops_reports.fs_invoice_external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <div class="page">
                <h2 class="d-none" style="font-size: 26px; font-weight: bold; text-align: center; margin-top: 10px; color:black !important;">
                    <span t-if="o.company_id.country_id.code == 'AE' and o.move_type in ['out_invoice', 'out_refund']">TAX</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Tax Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Tax Vendor Bill</span>
                    <!--<span t-if="o.name != '/'" t-field="o.name"/> -->
                </h2>

                <table class="table table-sm o_main_table mt32 mb32 d-none"
                    name="main_info_table" style="border: none;table-layout: fixed ;">
                    <t t-set="sale_id" t-value="o.env['sale.order'].sudo().search([('invoice_ids', '=', o.ids)], limit=1)"/>
                    <tbody style="border: none;" >
                        <tr style="border: none; font-size: 14px;">
                            <t t-set="colspan" t-value="2" />
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <!--<span><strong>Account number</strong>: <span t-field="o.partner_id.ref"/></span><br/> -->
                                <span>
<!--                                    <strong>Customer Name:</strong> -->
                                    <strong><span t-field="o.partner_id" /></strong>
                                </span>
                                <br />
                                <span>
<!--                                    <strong>Customer Address:</strong> -->
                                    <address t-field="o.partner_id"
                                        t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True}" />
                                </span>
                                <br/>
                                <span>
                                    <strong>TRN:</strong>
                                    <span t-field="o.partner_id.vat" />
                                </span>
                                <br/>
                                <span>
                                    <strong>Contact:</strong>
                                    <span t-field="sale_id.contact" />
                                </span>
                                <br/>
                            </td>
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <strong style="font-size:16px;">Subject:</strong>
                                <span style="font-size: 12px;"><t t-esc="sale_id.crm_lead_id.project_id.name" /></span>
                                <br />
                                <strong style="font-size:16px;">Project:</strong>
                                <span style="font-size: 12px;"><t t-esc="sale_id.opportunity_project_id.job_number" /></span>
                                <br />
                            </td>
                            <td class="text-left" style="border: none;width: 33.33% ;">
                                <span>
                                    <strong>Invoice Date:</strong>
                                    <span t-field="o.invoice_date" />
                                </span>
                                <br />
                                <span>
                                    <strong>Invoice Number:</strong>
                                    <span t-field="o.name" />
                                </span>
                                <br />
                                <span>
                                    <strong>Quote Number:</strong>
                                    <span t-field="sale_id.name" />
                                </span>
                                <br/>
                                <span>
                                    <strong>LPO:</strong>
                                    <span t-field="o.lpo" />
                                </span>
                                <br />
                                <!--<span><strong>Mobile</strong>: <span t-field="o.partner_id.mobile"/></span><br/> -->
                                <span>
                                    <strong>Payment Term:</strong>
                                    <span t-field="o.invoice_payment_term_id.name" />
                                </span>
                                <br />
                                <span>
                                    <strong>Due Date:</strong>
                                    <span t-field="o.invoice_date_due" />
                                </span>
                                <br />
                                <strong style="font-size:14px;">Sales Person:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.user_id.name" />
                                <br />
                                <!-- <strong style="font-size:14px;">Batch Number:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.batch_number.name" />
                                <br /> -->
                                <strong style="font-size:14px;">Sales Coordinator:</strong>
                                <span style="font-size: 14px;" t-field="sale_id.sales_cordinator_id.name" />
                                <br />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div id="informations" class="row mt32 mb32"
                    style="display: none;">
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_date"
                        name="invoice_date">
                        <strong>Invoice Date:</strong>
                        <p class="m-0" t-field="o.invoice_date" />
                    </div>
                    <div class="col-auto mw-100 mb-2"
                        t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                        name="due_date">
                        <strong>Due Date:</strong>
                        <p class="m-0" t-field="o.invoice_date_due" />
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin"
                        name="origin">
                        <strong>Source:</strong>
                        <p class="m-0" t-field="o.invoice_origin" />
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref"
                        name="customer_code">
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="o.partner_id.ref" />
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.ref" />
                    </div>
                </div>

                <t t-set="display_discount"
                    t-value="any([l.discount for l in o.invoice_line_ids])" />

                <table class="table table-sm o_main_table"
                    name="invoice_line_table" style="font-size: 12px;">
                    <thead>
                        <tr>
                            <!-- TODO: remove in master -->
                            <t t-set="colspan" t-value="6" />
                            <th name="th_sno" class="text-left">
                                <span>S.No.</span>
                            </th>
                            <!-- <th name="th_isbn" class="text-left">
                                <span>ISBN</span>
                            </th> -->
                            <th name="th_description" class="text-left">
                                <span>Description</span>
                            </th>
                            <!-- TODO: remove in master -->
                            <th name="th_source" class="d-none text-left" t-if="0">
                                <span>Source Document</span>
                            </th>
                            <th name="th_quantity" class="text-right">
                                <span>Quantity</span>
                            </th>
                            <th name="th_priceunit"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Unit Price</span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.%</span>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="colspan+1" />
                            </th>
                            <th class="text-right">
                                <span>Total</span>
                            </th>
                            <!-- added -->
                            <!-- <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th> -->
                            <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                            <th
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>VAT</span>
                            </th>
                            <th class="text-right">
                                <span>VAT Amount</span>
                            </th>
                            <th class="text-right">
                                <span>Net Total</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0" />
                        <t t-set="lines"
                            t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal"
                                t-value="current_subtotal + line.price_subtotal"
                                groups="account.group_show_line_subtotals_tax_excluded" />
                            <t t-set="current_subtotal"
                                t-value="current_subtotal + line.price_total"
                                groups="account.group_show_line_subtotals_tax_included" />

                            <tr
                                t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type"
                                    name="account_invoice_line_accountable">
                                    <td>
                                        <t t-esc="line_index+1" />
                                    </td>
                                    <!-- <td name="account_invoice_line_isbn">
                                        <span t-field="line.product_id.default_code"
                                            t-options="{'widget': 'text'}" />
                                    </td> -->
                                    <td name="account_invoice_line_name">
                                        <!-- <t t-if="line.product_id">
                                            <span t-field="line.product_id.name"
                                                t-options="{'widget': 'text'}" />
                                        </t>
                                        <t t-if="not line.product_id.id">-->
                                        <span t-field="line.name" t-options="{'widget': 'text'}" />
                                        <!-- </t> -->
                                    </td>
                                    <!--<td name="account_invoice_line_name"><span t-field="line.name" 
                                        t-options="{'widget': 'text'}"/></td> -->
                                    <td class="text-right">
                                        <span t-esc="int(line.quantity)" />
                                        <span t-field="line.product_uom_id"
                                            groups="uom.group_uom" />
                                    </td>
                                    <td
                                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit" />
                                    </td>
                                    <td t-if="display_discount"
                                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount" />
                                    </td>
                                    <!-- added -->
                                    <!-- <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"> -->
                                    <td t-attf-class="d-none">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                    </td>
                                    <td t-if="o.company_id.country_id.code == 'AE'">
                                        <span t-field="line.l10n_ae_vat_amount" id="line_tax_amount"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-esc="float(line.price_subtotal)" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td
                                        t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span
                                            t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" />
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span
                                            t-esc="float(line.price_total - line.price_subtotal)"
                                            t-options='{"widget": "float", "precision": 2}'
                                        />
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-esc="float(line.price_total)" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}" />
                                    </td>
                                    <t t-set="current_section" t-value="line" />
                                    <t t-set="current_subtotal" t-value="0" />
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}" />
                                    </td>
                                </t>
                            </tr>

                            <t
                                t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- <div class="clearfix">
                    <div id="total" class="row">
                        <div
                            t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm;page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="font-size: 14px;">
