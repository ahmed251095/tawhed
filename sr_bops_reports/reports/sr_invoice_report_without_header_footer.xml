                 <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <!--Tax totals-->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>

                                    <!--Payments-->
                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) &gt; 0">
                                                <tr class="border-black">
                                                    <td><strong>Amount Due</strong></td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>

                <div t-if="o.company_id.country_id.code == 'AE' and o.currency_id != o.company_id.currency_id"
                 id="aed_amounts" class="row clearfix ml-auto my-3 text-nowrap table">
                    <t t-set="aed_rate"
                       t-value="o.env['res.currency']._get_conversion_rate(o.currency_id, o.company_id.currency_id, o.company_id, o.invoice_date or datetime.date.today())"/>
                    <div name="exchange_rate" class="col-auto">
                        <strong>Exchange Rate</strong>
                        <p class="m-0" t-esc="aed_rate" t-options='{"widget": "float", "precision": 5}'/>
                    </div>
                    <div name="aed_subtotal" class="col-auto">
                        <strong>Subtotal (AED)</strong>
                        <p class="m-0" t-esc="o.amount_untaxed_signed"
                           t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                    </div>
                    <div name="aed_vat_amount" class="col-auto">
                        <strong>VAT Amount (AED)</strong>
                        <p class="m-0"
                           t-esc="o.currency_id._convert(o.amount_tax, o.company_id.currency_id, o.company_id, o.invoice_date or datetime.date.today())"
                           t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                    </div>
                    <div name="aed_total" class="col-auto">
                        <strong>Total (AED)</strong>
                        <p class="m-0" t-esc="o.amount_total_signed"
                           t-options='{"widget": "monetary", "display_currency": o.company_currency_id}'/>
                    </div>
                </div>

                <!--<p t-if="o.move_type in ('out_invoice', 'in_refund')"> -->
                <!-- Please use the following communication for your payment : <b><span 
                    t-field="o.invoice_payment_ref"/></b> -->
                <!--</p> -->
                <div class="row mt32 mb32" style="margin-left: 7px;">
                    <strong style="font-size:15px;">Bank Details:</strong><br/>
                    <span style="font-size: 15px;">Bank Name: ABU DHABI COMMERCIAL BANK</span><br/>
                    <span style="font-size: 15px;">Bank Address: Dubai, U.A.E.</span><br/>
                    <span style="font-size: 15px;">A/C No: 504341124001</span><br/>
                    <span style="font-size: 15px;">IBAN: AE530030000504341124001</span><br/>
                    <span style="font-size: 15px;">Swift Code: ADCBAEAA</span><br/>
                </div>
                <p t-if="o.narration" name="comment" style="font-size: 12px;margin-left: 7px;">
                    <span t-esc="o.set_font_size(o.narration)" />
                </p>
                <!-- <p t-if="o.remarks_id" name="remarks" style="font-size: 12px;">
                    <span t-field="o.remarks_id.description" />
                </p> -->
                <p t-if="o.invoice_payment_term_id" name="payment_term"
                    style="font-size: 15px; display:none;margin-left: 7px;">
                    <!-- <span style="display:none;" t-field="o.invoice_payment_term_id.note" /> -->
                </p>
                <p t-if="o.company_id.country_id.code == 'AE' and o.partner_id.country_id.code != 'AE' and o.env.ref('l10n_ae.gcc_countries_group') in o.partner_id.country_id.country_group_ids">
                    Supply between <b>United Arab Emirates</b> and
                    <b>
                        <span t-field="o.partner_id.country_id.name"/>
                    </b>
                </p>
                <p t-if="o.fiscal_position_id.note" name="note"
                    style="font-size: 15px;margin-left: 7px;">
                    <span t-field="o.fiscal_position_id.note" />
                </p>
                <div id="qrcode"
                    t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)" style="margin-left: 7px;">
                    <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                        <strong class="text-center">Scan me with your banking app.</strong>
                        <br />
                        <br />
                        <img class="border border-dark rounded"
                            t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual,(o.ref) if (o.ref) else o.name)" />
                    </p>
                    <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                        <strong class="text-center">The SEPA QR Code informations are not set
                            correctly.
                        </strong>
                        <br />
                    </p>
                </div>
                
                <div style="margin-top:100px;font-size:15px;margin-left: 7px;">
                        <span>Received By:</span><br/>
                        <span style="margin-left:15px;">Name:</span><br/>
                        <span style="margin-left:15px;">Date:</span><br/>
                        <span style="margin-left:15px;">Sign &amp; Stamp:</span><br/>
                </div>
            </div>
        </t>
    </template>
    <template
        id="fs_report_invoice_document_inherited"
        inherit_id="sr_bops_reports.fs_report_invoice_document">
        <div name="aed_total" position="replace" />
        <xpath expr="//th[@name='th_taxes']" position="replace"/>
        <td t-if="o.company_id.country_id.code == 'AE'" position="replace"/>
        <div name="aed_vat_amount" position="after">
            <div name="aed_total_custom" style="font-size: 12px;">
                <strong>Total (AED)</strong>
                <p
                    t-esc="o.currency_id._convert(o.amount_total, o.company_id.currency_id, o.company_id, o.invoice_date or datetime.date.today())"
                    t-options='{"widget": "monetary", "display_currency": o.company_currency_id}' />
            </div>
        </div>
        <div name="exchange_rate" position="attributes">
            <attribute name="style">font-size: 12px;</attribute>
        </div>

        <div name="aed_subtotal" position="attributes">
            <attribute name="style">font-size: 12px;</attribute>
        </div>

        <div name="aed_vat_amount" position="attributes">
            <attribute name="style">font-size: 12px;</attribute>
        </div>
    </template>

    <template id="fs_report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="sr_bops_reports.fs_report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>


</odoo>
